<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:padding="@dimen/margin_1x">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Nama Posyandu" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            app:hintAnimationEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPosyanduName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLabelAddress"
                android:fontFamily="@font/poppins_regular"
                android:hint="Isi Nama Posyandu"
                android:inputType="text"
                android:padding="@dimen/margin_1x"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:fontFamily="@font/poppins_bold"
            android:text="Nama Ketua" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            app:hintAnimationEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLabelAddress"
                android:fontFamily="@font/poppins_regular"
                android:hint="Isi Ketua Posyandu"
                android:inputType="text"
                android:padding="@dimen/margin_1x"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:fontFamily="@font/poppins_bold"
            android:text="Nomor WhatsApp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            app:hintAnimationEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLabelAddress"
                android:fontFamily="@font/poppins_regular"
                android:hint="Isi Nomor WhatsApp"
                android:inputType="phone"
                android:padding="@dimen/margin_1x"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:fontFamily="@font/poppins_bold"
            android:text="Alamat" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            app:hintAnimationEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLabelAddress"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|top"
                android:hint="Isi Alamat Posyandu"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="@dimen/margin_1x"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:fontFamily="@font/poppins_bold"
            android:text="Status kepemilikan Lahan" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerSkl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:fontFamily="@font/poppins_bold"
            android:text="Link Surat Keterangan" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            app:hintAnimationEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtLinkSkl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLabelAddress"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start|top"
                android:hint="Isi Link Surat Keterangan"
                android:inputType="textMultiLine"
                android:lines="2"
                android:padding="@dimen/margin_1x"
                android:textColor="@color/colorBlack"
                android:textSize="13sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1x">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgEditPosyandu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_img" />

            <RelativeLayout
                android:id="@+id/rlUploadFoto"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="@dimen/margin_1x"
                android:layout_weight="7"
                android:background="@drawable/background_border_card"
                android:foreground="?selectableItemBackground"
                android:padding="@dimen/margin_half"
                tools:ignore="UnusedAttribute">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUploadBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Klil untuk upload foto posyandu"
                    android:textAlignment="center" />


            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1x"
            android:text="Submit Edit" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>

