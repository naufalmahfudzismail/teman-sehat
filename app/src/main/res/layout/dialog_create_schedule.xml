<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_1x">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_close" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_half"
        android:fontFamily="@font/poppins_bold"
        android:text="Tambah Jadwal Baru" />



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1x"
        android:text="Nama Kegiatan" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_half"
        app:hintAnimationEnabled="true">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtScheduleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLabelAddress"
            android:fontFamily="@font/poppins_regular"
            android:hint="Isi nama Kegiatan"
            android:inputType="textMultiLine"
            android:padding="@dimen/margin_1x"
            android:textColor="@color/colorBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1x"
        android:text="Pilih Hari" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_marginTop="@dimen/margin_half"
        android:id="@+id/spinnerDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLabelAddress" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1x"
        android:text="Jam Kegiatan" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_half"
        app:hintAnimationEnabled="true">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLabelAddress"
            android:fontFamily="@font/poppins_regular"
            android:hint="Tentukan Jam"
            android:inputType="text"
            android:padding="@dimen/margin_1x"
            android:textColor="@color/colorBlack" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1x"
        android:text="Keterangan" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_half"
        app:hintAnimationEnabled="true">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtScheduleRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLabelAddress"
            android:fontFamily="@font/poppins_regular"
            android:hint="Isi Keterangan kegiatan"
            android:gravity="start|top"
            android:lines="5"
            android:inputType="textMultiLine"
            android:padding="@dimen/margin_1x"
            android:textColor="@color/colorBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1x"
        android:text="Submit" />

</androidx.appcompat.widget.LinearLayoutCompat>